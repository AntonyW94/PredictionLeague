    private string GetShieldColorClass(long? rank, int? memberCount)
    {
        switch (rank)
        {
            case null:
                return "shield-blue";

            case 1:
                return "shield-gold";

            case 2:
                return "shield-silver";

            case 3:
                return "shield-bronze";
        }

        if (memberCount > 4 && rank > (memberCount.Value * 0.75))
            return "shield-red";

        return "shield-blue";
    }

    public ValueTask DisposeAsync()
    {
        DashboardState.OnStateChange -= StateHasChanged;
        return ValueTask.CompletedTask;
    }
