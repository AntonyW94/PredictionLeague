    private static string GetStatusClass(long? rank, int? memberCount)
    {
        var statusPillClass = rank switch
        {
            1 => "badge-group--gold",
            2 => "badge-group--silver",
            3 => "badge-group--bronze",
            { } r when memberCount.HasValue && r > memberCount.Value * 0.75 => "badge-group--red",
            _ => "badge-group--blue"
        };

        return statusPillClass;
    }

    public ValueTask DisposeAsync()
    {
        DashboardState.OnStateChange -= StateHasChanged;
        return ValueTask.CompletedTask;
    }
}