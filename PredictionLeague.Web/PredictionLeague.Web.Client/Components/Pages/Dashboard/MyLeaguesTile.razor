                                                @league.PrizeMoneyRemaining.ToString("�0.00")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <button class="btn btn-sm purple-accent-button w-100" @onclick="() => ViewLeagueDashboard(league.Id)">
                            Enter League
                        </button>
                    </div>
                </div>

                @*   <div class="card">
