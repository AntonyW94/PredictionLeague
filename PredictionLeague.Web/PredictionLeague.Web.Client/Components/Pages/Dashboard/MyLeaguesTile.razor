                                Remove
                            </button>
                        }
                        else
                        { 
                        <button class="btn btn-sm purple-accent-button w-100"
                                title="View League Dashboard"
                                @onclick="() => ViewLeagueDashboard(league.Id)">
                            View
                        </button>
                        @* } 
                    </div>
                </div> *@
            }
        </div>
    }
</div>

